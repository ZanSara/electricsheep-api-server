// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db?connection_limit=1"
}

model Player {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String  @unique
  avatar String @default("/openai-sheep-face.png")
  balance Int
  currency_symbol String @default("EUR")
  games Game[]
  guesses_made Guess[]  @relation("player")
  guesses_received Guess[]  @relation("opponent")
  messages Message[]  // Why do I even need this
}

model Game {
  id Int @id @default(autoincrement())
  players Player[]
  guesses Guess[]
  messages Message[]
}

model Message {
  id Int @id @default(autoincrement())
  game Game @relation(fields: [game_id], references: [id])
  game_id Int
  author Player @relation(fields: [author_id], references: [id])
  author_id Int
  content String
}

model Guess {
  id Int @id @default(autoincrement())
  game Game  @relation(fields: [game_id], references: [id])
  game_id Int
  player Player @relation("player", fields: [player_id], references: [id])
  player_id Int
  opponent Player @relation("opponent", fields: [opponent_id], references: [id])
  opponent_id Int
  guess String
}
